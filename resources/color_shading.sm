// Color shading. No lighting, this only takes input "color".
#type shading_model

section geometry {
    // Sets gl_Position. This is handled with the special clip_position syntax.
    clip_position(in vec3 world_position, uniform mat4x4 vp_matrix) {
        return vp_matrix * vec4(world_position, 1);
    }
}
section fragment {
    // #passthrough vec4 color -> rt_color
    out vec4 rt_color(in vec4 color) {
        return color;
    }
}
