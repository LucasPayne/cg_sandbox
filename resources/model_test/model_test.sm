#type shading_model

block properties {
    mat4x4 vp_matrix;
}
section geom_post {
    out vec4 gl_Position(in vec4 world_position) {
    GLSL
        return vp_matrix * world_position;
    END
    }
}
section frag_post {
    out vec4 rt_color(in vec4 diffuse, in vec3 f_normal) {
    GLSL
        return max(0,dot(f_normal, normalize(vec3(1,1,1))))*diffuse;
    END
    }
}
