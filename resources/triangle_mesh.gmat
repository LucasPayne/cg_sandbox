#type gmat
#primitive triangles

block properties {
    mat4x4 model_matrix;
}
section vertex {
    out vec4 world_position(in vec3 v_position) {
    GLSL
        return model_matrix * vec4(v_position, 1);
    END
    }
    out vec3 f_position(in vec3 v_position) {
    GLSL
        return v_position;
    END
    }
    out vec3 f_normal(in vec3 v_normal) {
    GLSL
        return v_normal;
    END
    }
}
